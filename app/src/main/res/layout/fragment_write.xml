<com.kirillmangutov.dreameater.custom.GrowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutWriteBase"
    tools:context="com.kirillmangutov.dreameater.WriteFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTitle"
        style="@style/DreamText.Title"
        android:textSize="90sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="top" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextContents"
        android:gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@+drawable/edittext_bg"
        android:layout_below="@id/textViewTitle"
        style="@style/DreamText"/>


</com.kirillmangutov.dreameater.custom.GrowFrameLayout>
